<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.luke.caseappmatricula">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_round"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id"/>

        <activity
            android:name=".Activity.SplashActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activity.LoginActivity"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activity.CadastroActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".Activity.MenuActivity"
            android:label="Menú Principal"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activity.MeuCadastroActivity"
            android:label="Meu Cadastro"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activity.MeusCursosActivity"
            android:label="Minha grade"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activity.CursosActivity"
            android:label="Cursos Disponíveis"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activity.SobreActivity"
            android:label="Sobre"
            android:screenOrientation="portrait" />
        <activity android:name=".Activity.AlterarCadastroActivity"
            android:label="Alterar Cadastro"
            android:screenOrientation="portrait"></activity>
    </application>

</manifest>